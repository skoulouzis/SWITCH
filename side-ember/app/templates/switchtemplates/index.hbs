    <div class="row">
        <div class="col-md-12">
            <h1>My Components
              {{#link-to 'switchcomponents.new' class="btn btn-success pull-right"}}<i class="fa fa-plus fa-fw"></i> Create
                  New
                  Component{{/link-to}}</h1>
        </div>
    </div>
    <div class="row">
      {{#each model as |switchcomponent|}}
        {{#if switchcomponent.is_template_component}}
            <div class="col-md-3">
                <div class="panel panel-orange">
                    <div class="panel-heading">
                        <div class="btn-group pull-right">
                            <a class="btn btn-default" href="#" {{action "remove" switchcomponent}}><i
                                    class="fa fa-trash-o fa-fw"></i></a>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa {{switchcomponent.icon_name}} fa-4x"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 text-right">
                                <div><b>{{switchcomponent.title}}</b></div>
                                <div class="small"><i>{{switchcomponent.classpath}}</i></div>
                            </div>
                        </div>
                    </div>
                  {{#link-to 'switchtemplates.edit' switchcomponent}}
                      <div class="panel-footer">
                          <span class="pull-left">Go to component</span>
                          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                          <div class="clearfix"></div>
                      </div>
                  {{/link-to}}
                </div>
            </div>
        {{/if}}
      {{/each}}
    </div>
